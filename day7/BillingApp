using System;

public class PatientBill
{
    public string BillId { set; get; }
    public string Name { set; get; }
    public double Cost { set; get; }
    public double Total { set; get; }

    public void getTotal()
    {
        Console.WriteLine($"Cost: {Cost}");
        Total = Cost + Cost * 0.10;
        Console.WriteLine($"Total: {Total}");
    }
}

public static class Bill
{
    public static PatientBill LastBill;
    public static bool HashBill = false;

    public static void Create()
    {
        PatientBill CBill = new PatientBill();
        Console.Write("Enter bill no: ");
        CBill.BillId = Console.ReadLine();
        Console.Write("Enter Your Name: ");
        CBill.Name = Console.ReadLine();
        Console.Write("Enter the Cost: ");
        CBill.Cost = Convert.ToInt32(Console.ReadLine());

        CBill.getTotal();
        LastBill = CBill;
        HashBill = true;
        Console.WriteLine("Bill is created");
    }

    public static void ViewLastBill()
    {
        if (!HashBill)
        {
            Console.WriteLine("No bill available. Please create a new bill first.");
            return;
        }
        PatientBill last = LastBill;
        Console.WriteLine("----------- Last Bill -----------");
        Console.WriteLine($"Bill No is: {last.BillId}");
        Console.WriteLine($"Bill No is: {last.Name}");
        Console.WriteLine($"Bill No is: {last.Cost}");
        Console.WriteLine($"Bill No is: {last.Total}");
    }
    public static void ClearBill()
    {
        LastBill = null;
        HashBill = false;
        Console.WriteLine("Last bill cleared.");
    }
}

class Program
{
    static void Main(string[] args)
    {
        while (true)
        {
            Console.WriteLine("\n================== MediSure Clinic Billing ==================");
            Console.WriteLine("1. Create New Bill (Enter Patient Details)");
            Console.WriteLine("2. View Last Bill");
            Console.WriteLine("3. Clear Last Bill");
            Console.WriteLine("4. Exit");
            Console.Write("Enter your option: ");

            switch (Console.ReadLine())
            {
                case "1":
                    Bill.Create(); break;
                case "2":
                    Bill.ViewLastBill(); break;
                case "3":
                    Bill.ClearBill(); break;
                case "4":
                    Console.WriteLine("Thank you. Application closed normally."); return;
                default:
                    Console.WriteLine("Invalid option. Please select from the menu."); break;
            }
        }
    }
}